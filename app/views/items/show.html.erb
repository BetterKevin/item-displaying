<% provide(:headline, '展示') %>
<div class="container">
  <div class="center-block item-form">
    <p id="notice"><%= notice %></p>
    <table>
      <tr>
        <td class="show-photo">
          <%= image_tag @item.photo.url(:iphone5) %>  
        </td>
        <td class='show-message'>
           <h3>
            <strong>名称:</strong>
            <%= @item.title %>
          </h3>
      
          <h3>
            <strong>介绍:</strong>
            <%= @item.description %>
          </h3>
      
          <h3>
            <strong>价格:</strong>
            <%= @item.price %>元
          </h3>

          <h3>
            <%= link_to '编辑', edit_item_path(@item), class: 'btn btn-primary' %>
            <%= link_to '返回', items_path, class: 'btn btn-primary' %>
          </h3>
        </td>
      </tr>
    </table>
  </div>
</div>
