<%= form_for(@item, html: { multipart: true, "data-ajax" => false }) do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :photo, "照片" %>
    <%= f.file_field :photo %>
  </div>
  <div class="field">
    <%= f.text_field :title, class: 'form-control border-bottom-radius',placeholder: '名称' %>
    <%= f.text_area :description, class: 'form-control border-top-radius border-bottom-radius',placeholder: '介绍' %>
    <%= f.text_field :price, class: 'form-control border-top-radius',placeholder: '价格' %>
  </div>
  <div class="actions">
    <%= f.submit '提交', class: 'btn btn-primary btn-block' %>
  </div>
<% end %>
