<% provide(:headline, '服饰') %>
<div class="container">
  <ul class="items">
    <% @items.each do |item| %>
      <li class="item">
        <div class='item-action'>
          <%= link_to 'X', item, method: :delete, data: { confirm: '你确定吗?' }, class: 'item-delete' %>
          <%= link_to '编辑', edit_item_path(item), class: 'item-edit' %>
        </div>
        <%= image_tag item.photo.url(:iphone5), class: 'item-image' %>
      </li>
    <% end %>
    <li class="item new-item">
      <div class="plus-vertical-middle" >
        <%= link_to '+', new_item_path, class: 'plus-sign'  %>
      </div>
    </li>
  </ul>
</div>

